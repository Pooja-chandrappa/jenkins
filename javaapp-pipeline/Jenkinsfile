pipeline {
     agent { label 'agent'}
    
    environment {
        JAR_FILE = "java-sample-21-1.0.0.jar"
        APP_PORT = '5000'
    }
    
    // tools {
    //     maven 'Maven-3.9.0'
    //     jdk 'JDK-21'
    // }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ðŸ”„ Checking out source code...'
                git branch: 'master', url: 'https://github.com/Pooja-chandrappa/jenkins.git'
            }
        }
        
        stage('Tests') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        echo 'ðŸ§ª Running unit tests...'
                        dir('javaapp-pipeline') {
                            sh '''
                                echo "Starting test execution..."
                                mvn clean test
                            '''
                        }
                    }
                }

                

        stage('Sonar Analysis') {
            steps {
                echo 'ðŸ“Š Running SonarQube analysis...'
                dir('javaapp-pipeline') {
                    withSonarQubeEnv('sonar') {
                        sh '''
                            echo "Starting SonarQube analysis..."
                            mvn verify sonar:sonar \
                                -Dsonar.projectKey=javaapp \
                                -Dsonar.projectName=javaapp \
                        '''
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'ðŸ—ï¸ Building application...'
                dir('javaapp-pipeline') {
                    sh '''
                        echo "Building JAR file..."
                        mvn package -DskipTests=true
                    '''
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'ðŸš€ Deploying application...'
                dir('javaapp-pipeline/target') {
                    script {
                        // Stop any existing application process
                        sh '''
                            echo "ðŸ›‘ Stopping any existing application processes..."
                            if pgrep -f "java -jar java-sample-21-1.0.0.jar" > /dev/null; then
                                pkill -f "java -jar java-sample-21-1.0.0.jar"
                                echo "App was running and has been killed."
                            else
                                echo "App is not running."
                            fi
                        '''
                                              
                    }
                }
            }
        }
    }
    
  
